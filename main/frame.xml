<Ui>
	<Frame name="Scrap2Frame" inherits="PortraitFrameTemplate" parent="UIParent" toplevel="true" enableMouse="true" hidden="true">
		<Size x="687" y="534"/>
		<Frames>
			<EditBox parentKey="SearchBox" inherits="SearchBoxTemplate" letters="50">
				<Size x="300" y="20"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="80" y="-35"/>
				</Anchors>
			</EditBox>

			<DropdownButton parentKey="OptionsDropdown" inherits="WowStyle1FilterDropdownTemplate">
				<Anchors>
					<Anchor point="TOPRIGHT" x="-30" y="-35"/>
				</Anchors>
			</DropdownButton>
			<Button parentKey="OptionsWheel" inherits="IconButtonTemplate" alpha="0.8">
				<KeyValues>
					<KeyValue key="icon" value="Interface\Worldmap\Gear_64Grey" type="string"/>
					<KeyValue key="useIconAsHighlight" value="true" type="boolean"/>
					<KeyValue key="iconSize" value="20" type="number"/>
				</KeyValues>
				<Anchors>
					<Anchor point="RIGHT" relativeKey="$parent.OptionsDropdown" relativePoint="LEFT" x="-10"/>
				</Anchors>
			</Button>

			<Frame parentKey="LeftInset" useParentLevel="true" inherits="InsetFrameTemplate4">
				<Size x="120" y="496"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="4" y="-60" />
					<Anchor point="BOTTOMLEFT" x="4" y="26" />
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Bg" atlas="auctionhouse-background-summarylist"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="TagsBox" inherits="WowScrollBoxList">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.LeftInset" x="6" y="-4"/>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.LeftInset" y="4"/>
				</Anchors>
			</Frame>

			<Frame parentKey="RightInset" useParentLevel="true" inherits="InsetFrameTemplate4">
				<Size x="70" y="496"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.LeftInset" relativePoint="TOPRIGHT" x="0" y="0" />
					<Anchor point="BOTTOMRIGHT" x="-23" y="7"/>
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Bg" atlas="auctionhouse-background-sell-right"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="ItemsBox" inherits="WowScrollBoxList">
				<Anchors>
					<Anchor point="BOTTOMRIGHT" relativeKey="$parent.RightInset" y="4"/>
					<Anchor point="TOPLEFT" relativeKey="$parent.RightInset" y="-4"/>
				</Anchors>
			</Frame>

			<EventFrame parentKey="ScrollBar" inherits="MinimalScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.RightInset" relativePoint="TOPRIGHT" x="5"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.RightInset" relativePoint="BOTTOMRIGHT" x="5"/>
				</Anchors>
			</EventFrame>

			<Button parentKey="NewTag" inherits="MagicButtonTemplate" text="New Tag">
				<Size x="118" y="22"/>
				<Anchors> <Anchor point="BOTTOMLEFT"/> </Anchors>
			</Button>
		</Frames>
	</Frame>

	<Button name="Scrap2TagButtonTemplate" registerForClicks="anyUp" virtual="true">
		<Size x="102" y="32"/>
		<Layers>
            <Layer level="BORDER">
                <Texture parentKey="Ring" atlas="CovenantChoice-Offering-Ability-Ring-Necrolord">
					<Size x="25" y="25"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</Texture>
				 <Texture parentKey="RingGlow" atlas="Lighttrait-glow" alphaMode="ADD" alpha="0.7">
				 	<Size x="30" y="30"/>
					<Anchors>
						<Anchor point="LEFT" relativeKey="$parent.Ring" x="-3"/>
					</Anchors>
				</Texture>
            </Layer>
			<Layer level="BACKGROUND" textureSubLevel="-1">
				<Texture parentKey="Bg" atlas="CircleMaskScalable" alpha="0.4">
					<Color r="0" g="0" b="0"/>
					<Size x="20" y="20"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Ring"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture parentKey="Icon">
					<Size x="20" y="20"/>
					<Anchors>
						<Anchor point="CENTER" relativeKey="$parent.Ring"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="IconHighlight" alphaMode="ADD" alpha="0.4">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
				<Texture parentKey="BorderHighlight" atlas="CovenantChoice-Offering-Ability-Ring-Necrolord" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Ring"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Ring"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<ButtonText>
			<Anchors>
				<Anchor point="LEFT" x="32" y="0"/>
			</Anchors>
		</ButtonText>
		<HighlightTexture atlas="Options_List_Active" alphaMode="ADD"/>
		<Scripts>
			<OnClick> Scrap2.Frame.OnTagClick(self, button) </OnClick>
			<OnEnter>
				if self.tag.id > 0 then
					GameTooltip:SetOwner(self, 'ANCHOR_RIGHT')
					GameTooltip:AddLine(self.tag.name, 1,1,1)
					GameTooltip:AddLine('|A:NPE_RightClick:14:14|a' .. OPTIONS)
					GameTooltip:Show()
				end
			</OnEnter>
			<OnLeave function="GameTooltip_Hide"/>
		</Scripts>
	</Button>

	<Button name="Scrap2ItemButtonTemplate" registerForClicks="anyUp" virtual="true">
		<Size x="170" y="46"/>
		<Layers>
			<Layer level="BACKGROUND">
				<Texture parentKey="Bg" atlas="GarrMission_FollowerListButton">
					<Anchors>
						<Anchor point="TOPLEFT" x="42"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="BORDER">
				<Texture parentKey="Icon">
					<Size x="38" y="38"/>
					<Anchors>
						<Anchor point="LEFT"/>
					</Anchors>
				</Texture>
			</Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="BgHighlight" atlas="PetList-ButtonHighlight" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Bg"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Bg"/>
					</Anchors>
				</Texture>
				<Texture parentKey="BgHighlight" file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Icon"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Icon"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
		<ButtonText maxLines="3">
			<Anchors>
				<Anchor point="LEFT" relativePoint="RIGHT" relativeKey="$parent.Icon" x="10" y="1"/>
				<Anchor point="RIGHT"/>
			</Anchors>
		</ButtonText>
		<NormalFont style="GameFontHighlightSmallLeft"/>
		<Scripts>
			<OnClick> Scrap2:TagMenu() </OnClick>
			<OnEnter>
				GameTooltip:SetOwner(self, 'ANCHOR_RIGHT')
				GameTooltip:SetItemByID(self.id)
				GameTooltip:Show()
			</OnEnter>
			<OnLeave function="GameTooltip_Hide"/>
		</Scripts>
	</Button>

	<Script file="frame.lua"/>
	<Script file="menus.lua"/>
</Ui>