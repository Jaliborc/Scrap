	<Frame name="Scrap2FrameDesignTemplate" virtual="true">
		<Size x="677" y="444"/>
		<Frames>
			<Frame parentKey="LeftInset" useParentLevel="true" inherits="InsetFrameTemplate">
				<Size x="120" y="496"/>
				<Anchors>
					<Anchor point="TOPLEFT" x="4" y="-60" />
					<Anchor point="BOTTOMLEFT" x="4" y="26" />
				</Anchors>
				<Layers>
					<Layer level="BACKGROUND">
						<Texture parentKey="Bg" atlas="ClassHall_StoneFrame-BackgroundTile" vertTile="true" horizTile="true"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame parentKey="RightInset" useParentLevel="true" inherits="InsetFrameTemplate">
				<Size x="70" y="496"/>
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.LeftInset" relativePoint="TOPRIGHT" x="0" y="0" />
					<Anchor point="BOTTOMRIGHT" x="-28" y="7"/>
				</Anchors>
			</Frame>

			<EventFrame parentKey="ScrollBar" inherits="WowTrimScrollBar">
				<Anchors>
					<Anchor point="TOPLEFT" relativeKey="$parent.RightInset" relativePoint="TOPRIGHT" x="-1"/>
					<Anchor point="BOTTOMLEFT" relativeKey="$parent.RightInset" relativePoint="BOTTOMRIGHT" x="-1"/>
				</Anchors>
			</EventFrame>
		</Frames>
	</Frame>

	<Button name="Scrap2RingTemplate" virtual="true">
		<Layers>
            <Layer level="BORDER">
                <Texture parentKey="Ring" atlas="Garr_BuildingIconRing_">
					<Size x="26" y="26"/>
					<Anchors>
						<Anchor point="LEFT" x="5"/>
					</Anchors>
				</Texture>
            </Layer>
			<Layer level="HIGHLIGHT">
				<Texture parentKey="RingGlow" atlas="Garr_BuildingIconRing_" alphaMode="ADD">
					<Anchors>
						<Anchor point="TOPLEFT" relativeKey="$parent.Ring"/>
						<Anchor point="BOTTOMRIGHT" relativeKey="$parent.Ring"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>

	<Button name="Scrap2ItemSizeTemplate" virtual="true">
		<Size x="165" y="42"/>
		<Layers>
			<Layer level="BORDER">
				<Texture parentKey="Icon">
					<Size x="34" y="34"/>
					<Anchors> <Anchor point="LEFT"/> </Anchors>
				</Texture>
			</Layer>
			<Layer level="BACKGROUND">
				<Texture parentKey="Bg" atlas="GarrMission_FollowerListButton">
					<Anchors>
						<Anchor point="TOPLEFT" x="38"/>
						<Anchor point="BOTTOMRIGHT"/>
					</Anchors>
				</Texture>
			</Layer>
		</Layers>
	</Button>
</Ui>